                            </Style>
                        </GroupStyle.ContainerStyle>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid 
                                                       ItemHeight="100" 
                                                       ItemWidth="200" 
                                                       Orientation="Vertical" 
                                                       MaximumRowsOrColumns="10"/>
                            </ItemsPanelTemplate>
